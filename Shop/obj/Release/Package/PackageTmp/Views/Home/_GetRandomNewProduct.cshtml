@model Shop.Models.Product

<style>
    .thumbnail:hover {
        border-color: dodgerblue;
        border-width: 2px;
        text-decoration: none;
    }

    .thumbnail a {
        text-decoration: none;
    }
</style>

<div class="thumbnail">
    <a href="@Url.Action("Details", "Home", new { Id = Model.Id })">
        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" style="width:100%;">
        <div style="position:absolute;top:15px;right:20px;">
            @if (Model.Discount)
            {
                <p style="font-size:24px"><span class="label label-danger">Akcija</span></p>
            }
        </div>
        <div class="caption">
            <p style="font-size:1.5rem;"><b>@Model.Name</b></p>
            @if (Model.Discount == true)
            {
                <p style="font-size:20px">@Model.DiscountPrice kn</p>
            }
            else
            {
                <p style="font-size:20px">@Model.Price kn</p>
            }

        </div>
    </a>
    <div class="text-right" style="margin-right:5px;margin-bottom:5px;">
        <a href="@Url.Action("AddToCart", "ShoppingCart", new { productId = Model.Id })">
            <div class="btn btn-danger">
                <span class="glyphicon glyphicon-shopping-cart">
                    U košaricu
                </span>
            </div>
        </a>
    </div>
</div>