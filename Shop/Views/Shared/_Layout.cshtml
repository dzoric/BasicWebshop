<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <style>
        #navFix {
            display: -webkit-box;
        }
        #collapseFix{
            display:contents !important;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="collapseFix">
                <div class="row" id="navFix">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Naslovnica", "Index", "Home")</li>
                        @Html.Action("_GetAdminMenu", "Home")
                        <li>@Html.ActionLink("O nama", "About", "Home")</li>
                        <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    </ul>
                    @Html.Action("_Search", "Home")
                    @Html.Partial("_LoginPartial")
                    @Html.Action("_GetCartCount", "Home")
                </div>
            </div>
        </div>
    </div>
    @{
        var isHome = ViewContext.RouteData.Values["controller"].ToString().ToUpper() == "HOME";
        var isIndex = ViewContext.RouteData.Values["action"].ToString().ToUpper() == "INDEX";
    }
    @if (isHome && isIndex)
    {
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="http://techmag.com.pk/wp-content/uploads/2018/04/Smartphones.jpg" alt="Los Angeles">
                    <div class="carousel-caption">
                        <h3>Dobrodošli na webshop</h3>
                        <p>Uživajte u kupovini svog novog smartphone-a</p>
                    </div>
                </div>

                <div class="item">
                    <img src="https://www.lg.com/uk/images/MC/features/G6_Hero_banner_local2.jpg" alt="Chicago">
                    <div class="carousel-caption" style="margin-bottom:25px;">
                        <h3>Isprobajte novi LG G6</h3>
                        <p>Ostvarite 10% popusta prilikom kupovine putem našeg webshop-a</p>
                    </div>
                </div>

                <div class="item">
                    <img src="https://www.dbramante1928.com/media/153105/dbramante1928-mode-banner-2.jpg?crop=0,0,0,0&cropmode=percentage&width=1600&height=800&rnd=131914190110000000" alt="New York">
                    <div class="carousel-caption" style="color:black">
                        <h3>Pronađite nas na Amazonu</h3>
                        <p>Dostavljamo u preko 100 zemalja širom svijeta</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
    <br />
    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">
                @Html.Action("_GetCategories", "Home")
            </div>
            <div class="col-sm-8 text-left">
                @RenderBody()
            </div>
            <div class="col-sm-2 sidenav">
                <div class="well">
                    <p>@Html.Action("_GetRandomDiscountedProduct", "Home")</p>
                </div>
                <div class="well">
                    <p>@Html.Action("_GetRandomDiscountedProduct", "Home")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">


        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Shop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
