@model Shop.Models.Product

<style>
    .thumbnail:hover {
        border-color: dodgerblue;
        border-width: 2px;
        text-decoration: none;
    }

    .thumbnail a {
        text-decoration: none;
    }
</style>

<div class="thumbnail" style="position:relative">
    <a href="@Url.Action("Details", "Home", new { Id = Model.Id })" style="text-decoration:none">
        <img src="@Url.Content(Model.ImageUrl)" style="width:100%;" />
        <div style="position:absolute;top:5px;right:10px;">
            @if (Model.Discount)
            {
                <p style="font-size:20px"><span class="label label-danger">Akcija</span></p>
            }
        </div>
        <div class="caption">
            <p>@Model.Name</p>
            <p><strike>@Model.Price</strike> kn</p>
            <p>@Model.DiscountPrice kn</p>
        </div>
    </a>
</div>